<header>
    <div class="container">
        <div class="row">

            <div class="logo col-xs-3">
                <%= link_to root_path do %>
                    <i class="fab fa-pagelines logo-leaf"></i>
                    <span class="logo-text"><b>Gardenia</b></span>
                <% end %>
            </div>

            <div class="col-xs-3">
                <!-- 検索ボックス -->
                <%= search_form_for @search, url: search_result_path do |f| %>
                <%= f.search_field :post_content_or_place_or_problem_or_solution_or_tags_name_or_planted_gardens_plant_name_cont, class:"search_field", placeholder: '検索ワードを入力' %>

                <span class="actions">
                    <%= f.button :type => "submit", class:'btn btn-primary' do %>
                    <i class="fas fa-search"></i>
                    <% end %>
                </span>

                <% end %>
            </div>

            <div class="col-xs-5 col-xs-offset-1">
            <!-- 管理者でログインした場合 -->
                <% if admin_signed_in? %>
                    <div class="admin_user-box col-xs-6 col-xs-offset-6">
                        <span class="admin_user"> ショップ管理画面<br>　　　管理者　様</span>
                    </div>

                    <div class="admin-signout-box">
                        <%= link_to(destroy_admin_session_path, method: :delete) do %>
                            <span class="admin_signout"> サインアウト</span>
                        <% end %>
                    </div>


                <!-- ユーザでログインした場合 -->
                <% elsif user_signed_in?%>

                    <span class="current_user"><%= current_user.user_name %>さん</span>

                    <div class="header-menu">

                        <%= link_to about_path do %>
                            <span class="about-gardenia"> Gardeniaとは？</span>
                        <% end %>

                        <%= link_to(user_path(current_user.id)) do %>
                            <span class="home"> マイページ</span>
                        <% end %>

                        <%= link_to(notifications_path) do %>
                            <% if unchecked_notifications.any? %>
                                <span class="notification"> 通知</span>
                                <i class="fas fa-circle n-circle fa-stack-1x"></i>
                            <% else %>
                                <span class="notification"> 通知</span>
                            <% end %>
                        <% end %>

                        <%= link_to new_post_garden_path do %>
                            <span class="contact"> 新規投稿</span>
                        <% end %>

                        <%= link_to(destroy_user_session_path, method: :delete) do %>
                            <span class="signout"> サインアウト</span>
                        <% end %>

                    </div>


                    <!-- ログインしていない場合 -->
                <% else %>

                    <% link_to about_path do %>
                        <span class="about-gardenia"> Gardeniaとは？</span>
                    <% end %>

                    <%= link_to(new_user_registration_path) do %>
                        <span class="signup"> 新規登録</span>
                    <% end %>

                    <%= link_to(new_user_session_path) do %>
                        <span class="signin"> ログイン</span>
                    <% end %>

                <% end %>

            </div>
        </div>
    </div>
</header>