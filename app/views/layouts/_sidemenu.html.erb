<div class="col-xs-2">
	<div class="pickup-garden">
		<div class="side-title">
			<p class="pickup-garden-title"><strong>【新着】<br>公開中のお庭</strong><i class="fas fa-camera-retro icon-side"></i></p>
		</div>
	</div>
	<div class="popular-post-index">

		<% @open_gardens_side.each do |open_garden| %>
			<div class="mp-place-box-side">
					<span class="mp-place-side-text"><%= open_garden.open_prefecture %></span>
			</div>
			<div class="side-open-garden">
				<%= link_to post_garden_path(open_garden.id) do %>
					<%= attachment_image_tag open_garden.post_images[0], :garden_image, :fill, 120,120, format: 'jpg', class:"index-post-image" %>
				<% end %>
			</div>
		<% end %>
	</div>

	<div class="popular-tag-index">
		<div class="side-title">
			<p class="popular-tag-index-title"><strong>よく使うワード</strong><i class="fas fa-tag icon-side"></i></p>
		</div>
		<% @tags.each do |tag| %>
			<%= link_to search_result_path(tag_name: tag.name), class:"tag-label-link" do %>
				<span class="label tag-label"><%= tag %></span>
			<% end %>
		<% end %>
	</div>

	<div class="side-title">
		<p class="search-plant-title-text"><strong>この植物の名前は？</strong></p>
		<%= link_to "調べる >", new_search_plant_path, class:"btn btn-success" %>
	</div>
</div>