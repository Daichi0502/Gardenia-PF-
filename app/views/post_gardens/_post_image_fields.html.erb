<div class="col-xs-4">
	<div class="nested-fields">
		<div class="form-group new-post-image-box">

			<!-- // id "file"で、fileとdivを紐付けクリック時に連動 -->
            <div class="new_img_field" onClick="$('#new_file').click()">

                <div class="row">
                    <div class="col-xs-7 col-xs-offset-1">
                        <p class="new-image-text">クリックして画像を選択してください</p>
                    </div>
                    <div class="col-xs-4">
                        <i class="fas fa-image"></i>
                    </div>
                </div>

            </div>

            <div class="new-post-image-preview">
	            <!-- // id "file"をつけ、「display:none;」で隠す -->
	            <%= f.attachment_field :garden_image, class:"new-post-image", style:"display:none;", id:"new_file" %>
	        </div>

	        <div class="auto-keyword">
	        	<p class="auto-keyword-title">こんなタグをつけませんか？</p>
	        		<span class="auto-keyword-text-0 label label-info"></span>
	        		<span class="auto-keyword-text-1 label label-info"></span>
	        		<span class="auto-keyword-text-2 label label-info"></span>
	        		<span class="auto-keyword-text-3 label label-info"></span>
	        		<span class="auto-keyword-text-4 label label-info"></span>
	        </div>

			<%= link_to_remove_association "削除", f, class:"btn btn-danger btn-sm new-post-image-delete-position" %>

		</div>
	</div>
</div>