<div class="container">
	<div class="row">
		<h2><%= @user.user_name %></h2>
			<div class="col-xs-4">
				<div class="samuneiru-position">
				<%= attachment_image_tag @user, :profile_image, :fill, 150, 150, format: 'jpg', fallback: "no_image.jpg" %>
				</div>
			</div>

			<div class="col-xs-6">

				<% unless current_user == @user %>
					<% if current_user.following?(@user) %>
						<%= form_for(current_user.relationships.find_by(follow_id: @user.id), url: unfollow_path(@user.id), html: { method: :delete }) do |f| %>
							<%= hidden_field_tag :follow_id, @user.id %>
							<%= f.submit 'フォロー解除', class:"btn btn-danger btn-block" %>
						<% end %>
					<% else %>
						<%= form_for(@relationship) do |f| %>
							<%= hidden_field_tag :follow_id, @user.id %>
							<%= f.submit '+ フォロー', class:"btn btn-primary btn-block" %>
						<% end %>
					<% end %>
				<% end %>

				<%= link_to "会員情報編集", edit_user_path(current_user.id) %>


				<div class="follow-index">
					<span class="follower-text"><%= link_to "フォロワー", follower_path(params[:id]) %></span>
					<span class="following-text"><%= link_to "フォロー中", following_path(params[:id]) %></span>
				</div>


			</div>
	</div>

	<!-- 投稿一覧 -->
	<div class="row">
		<div class="col-xs-10">

			<%= @post_gardens.each_slice(4) do |post_garden1,post_garden2,post_garden3,post_garden4| %>

				<% if post_garden1 != nil %>
					<%= link_to post_garden_path(post_garden1.id) do %>
						<%= attachment_image_tag post_garden1.post_images[0], :garden_image, :fill, 250,250, format: 'jpg' %>
					<% end %>

					<%= post_garden1.post_content %>
				<% end %>

				<% if post_garden2 != nil %>
					<%= link_to post_garden_path(post_garden2.id) do %>
						<%= attachment_image_tag post_garden2.post_images[0], :garden_image, :fill, 250,250, format: 'jpg' %>
					<% end %>

					<%= post_garden2.post_content %>
				<% end %>

				<% if post_garden3 != nil %>
					<%= link_to post_garden_path(post_garden3.id) do %>
						<%= attachment_image_tag post_garden3.post_images[0], :garden_image, :fill, 250,250, format: 'jpg' %>
					<% end %>

					<%= post_garden3.post_content %>
				<% end %>

				<% if post_garden4 != nil %>
					<%= link_to post_garden_path(post_garden4.id) do %>
						<%= attachment_image_tag post_garden4.post_images[0], :garden_image, :fill, 250,250, format: 'jpg' %>
					<% end %>

					<%= post_garden4.post_content %>
				<% end %>


			<% end %>
		</div>
</div>